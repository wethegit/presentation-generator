//- set the doctype first, pug can accept different doctypes
doctype html

html
  head
    //- Base metas
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=1, minimum-scale=1")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    //- Title and description
    meta(name="description" content="Desc")
    title Title

  body
    if title
      h1 Title: #{title}
    if client
      h2 Client: #{client}
    if logo
      img(src='./logo.png')

    ul
      each breakpoint in breakpoints
        li
          p <strong>Breakpoint:</strong> #{breakpoint.displayName}

    ul
      each concept in concepts
        li
          p <strong>Concept:</strong> #{concept.displayName}
          ul
            each page in concept.pages
              li
                p <strong>Page:</strong> #{page.displayName}

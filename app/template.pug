//- set the doctype first, pug can accept different doctypes
doctype html

html
  head
    //- Base metas
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=1, minimum-scale=1")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    //- Title and description
    meta(name="description" content="Desc")
    title Title

  body
    if title
      h1 Title: #{title}
    if client
      h2 Client: #{client}
    if folders.intro

    ul
      each files, folder in folders
        li
          p <strong>Breakpoint:</strong> #{folder}
          ul
            each file in files
              li
                p <strong>Page:</strong> #{file.displayName}
                img(src=file.fullPath)

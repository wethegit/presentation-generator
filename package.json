{
  "name": "presentation-generator",
  "productName": "WTC Presentation Generator",
  "description": "A simple app that generates presentations based on a folder structure.",
  "version": "1.0.5",
  "author": "Marlon Marcello <marlon.marcello@gmail.com>",
  "copyright": "© 2019, we { the collective }",
  "homepage": "http://wethecollective.com",
  "main": "app/background.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "publish": "build -p always"
  },
  "build": {
    "appId": "com.electron.presentation-generator",
    "copyright": "Copyright © 2019 we { the collective }",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "electron-log": "^3.0.6",
    "electron-updater": "^4.1.2",
    "fs-jetpack": "^2.1.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "css-loader": "^3.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "source-map-support": "^0.5.6",
    "spectron": "^7.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
